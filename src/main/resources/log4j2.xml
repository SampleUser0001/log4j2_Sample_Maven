<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project>  
<Configuration status="off">

    <!-- Propertiesは、nameの値を変数として使える -->
    <Properties>
        <!-- ログのフォーマット 
           %dは日時。{}に日時の形式を指定
           %tはスレッド名
           %-6pはログレベル名称を左詰めで6文字分出力する。「debug」であれば後ろに空白１文字が追加される。
               但し、%-3pとしても名称は削られず「debug」として出力される。%6と-をとると右づめになる。
           %c{x}は,例えばロガー名がorg.apache.commons.Fooのとき%c{2}の場合、commons.Fooが出力される
           %mはログメッセージ
           %nは改行
        -->
        <Property name="format1">%d{yyyy/MM/dd HH:mm:ss.SSS} [%t] %-6p %c{10} %m%n</Property>
        <Property name="logfile">./logs/testlog.log</Property>
        <Property name="logfile-archive">./logs/testlog_%d{yyyy-MM-dd-HH-mm}.tar.gz</Property>

        <!-- 別の動作確認で使う -->
        <Property name="logdir" value="./otherTestLogs" />
        <Property name="sys:logdir" value="./otherTestLogs" />
    </Properties>
    
    <Appenders>
        <!-- コンソールに出力する設定 -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>${format1}</pattern>
            </PatternLayout>
        </Console>

        <!-- ファイルに出力する設定 -->
        <RollingFile name="logfile001" append="true" fileName="${logfile}"
            filePattern="${logfile-archive}">
            <PatternLayout>
                <pattern>${format1}</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
        </RollingFile>

        <!-- 「sys:*」は本来、Javaのシステムプロパティを取得する。この使い方ではない。 -->
        <File name="Test" fileName="${sys:logdir}/default.log">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss,SSS}] %-20c{1} %5p - %m%n" />
        </File>
    </Appenders>
    
    <Loggers>
        <Logger name="sample.log4j2" level="debug" additivity="false">
            <AppenderRef ref="Test" />
        </Logger>

        // trace以上のログを出力する
        <Root level="trace">
            <AppenderRef ref="Console" />
        </Root>
        <Logger name="sample.log4j2.App" level="trace">
            <AppenderRef ref="logfile001" />
        </Logger>
    </Loggers>
</Configuration>